    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Tab switching logic
            const btnMath = document.getElementById('btn-math');
            const btnCs = document.getElementById('btn-cs');
            const contentMath = document.getElementById('content-math');
            const contentCs = document.getElementById('content-cs');

            btnMath.addEventListener('click', () => {
                contentMath.classList.remove('hidden');
                contentCs.classList.add('hidden');
                btnMath.classList.add('active');
                btnCs.classList.remove('active');
            });

            btnCs.addEventListener('click', () => {
                contentCs.classList.remove('hidden');
                contentMath.classList.add('hidden');
                btnCs.classList.add('active');
                btnMath.classList.remove('active');
            });
            
            // Chart.js implementation
            const ctx = document.getElementById('benefitsChart').getContext('2d');
            const benefitsChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['PoveÄ‡ana motivacija', 'Diferencijacija nastave', 'Razvoj kritiÄkog miÅ¡ljenja', 'Samostalnost uÄenika', 'Bolje razumijevanje'],
                    datasets: [{
                        label: 'Utjecaj na nastavu (%)',
                        data: [92, 88, 85, 95, 90],
                        backgroundColor: [
                            'rgba(13, 148, 136, 0.6)',
                            'rgba(15, 118, 110, 0.6)',
                            'rgba(17, 94, 89, 0.6)',
                            'rgba(19, 78, 74, 0.6)',
                            'rgba(20, 83, 45, 0.6)'
                        ],
                        borderColor: [
                            'rgba(13, 148, 136, 1)',
                            'rgba(15, 118, 110, 1)',
                            'rgba(17, 94, 89, 1)',
                            'rgba(19, 78, 74, 1)',
                            'rgba(20, 83, 45, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    indexAxis: 'y',
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            display: false
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    let label = context.dataset.label || '';
                                    if (label) {
                                        label += ': ';
                                    }
                                    if (context.parsed.x !== null) {
                                        label += context.parsed.x + '%';
                                    }
                                    return label;
                                }
                            }
                        }
                    },
                    scales: {
                        x: {
                            beginAtZero: true,
                            max: 100,
                            ticks: {
                                callback: function(value) {
                                    return value + "%"
                                }
                            }
                        }
                    }
                }
            });

            // Sticky nav scroll effect
            const navbar = document.getElementById('navbar');
            window.onscroll = function() {
                if (window.scrollY > 50) {
                    navbar.classList.add('nav-scrolled');
                } else {
                    navbar.classList.remove('nav-scrolled');
                }
            };
            
            // Smooth scroll
            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    document.querySelector(this.getAttribute('href')).scrollIntoView({
                        behavior: 'smooth'
                    });
                });
            });

        });
    </script>
